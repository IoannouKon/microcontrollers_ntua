IN 10H
LXI B,01F4H

CHECK:
	MVI E,0FH
	LDA 2000H
	RRC
	JC SWITCH_ON
	JMP CHECK

SWITCH_ON:
	LDA 2000H
	RRC
	JC SWITCH_ON

BLINK:
	LDA 2000H
	RRC
	JC BLINK_RENEW
	MVI A,00H
	STA 3000H
	CALL DELB
	LDA 2000H
	RRC
	JC BLINK_RENEW
	MVI A,FFH
	STA 3000H
	CALL DELB
	LDA 2000H
	RRC
	JC BLINK_RENEW
	DCR E
	JNZ BLINK
	JMP CHECK

BLINK_RENEW:
	LDA 2000H
	RRC
	JNC REFRESH
	MVI A,00H
	STA 3000H
	CALL DELB
	LDA 2000H
	RRC
	JNC REFRESH
	MVI A,FFH
	STA 3000H
	CALL DELB
	LDA 2000H
	RRC
	JNC REFRESH
	DCR E
	JNZ BLINK_RENEW
	JMP CHECK

REFRESH:
	MVI E,0FH
	JMP BLINK

FINAL:
END